<html>
  <head>
    <meta charset="utf-8" />
    <title>Weather App</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
    <link href="css/styles.css" rel="stylesheet" />
  </head>
  <body>
    <h1 class="heading">Weather App</h1>
    <div class="input-container">
      <form action="/" method="post">
        <input
          name="cityName"
          type="text"
          placeholder="Search for a city..."
          autofocus
          autocomplete="off"
        />
        <button type="submit" class="btn btn-warning">Search</button>
      </form>
    </div>
    <div class="error-text"> 
      <% if (error){ %>
       <%= error %>
      <% }  %>
    </div>
    <div class="container">
      <div class="row cards-area">
      <% cityInfo.forEach(function(item){ %>
        <div class="card col-4 m-4 weather-card"  style="width: 18rem;">
          <div class="card-body">
            <h2 class="card-title city-name">
              <span><%= item.name %> </span>
              <sup><%= item.country%></sup>
            </h2>
            
            <div class="card-text city-temp"><%= item.temperature %> <sup>Â°C</sup></div>
            <img src=<%= item.image %> class="card-img-top city-icon" alt="Weather image">
            <p class="card-text description"><%= item.description%></p>

           
          </div>
        </div>

      <% }) %>
    </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
